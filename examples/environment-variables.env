JAVA_OPTS=

# Project Basic Settings
PROJECT_NAME=
PACKAGE_NAME=

# Server port and protocol configuration
ARMERIA_PORTS_0_PORT=8080
ARMERIA_PORTS_0_PROTOCOLS=HTTP,HTTPS

# TLS key settings
ARMERIA_TLS_CERT_CHAIN_FILE=
ARMERIA_TLS_KEY_FILE=

# Set the language used by the Git platform (e.g., en-US, ko-KR)
APP_LOCALE=

# Branch name to respond to Git platform's Webhook trigger
BRANCH=

# GitHub related settings (GitLab is enabled by default)
GITHUB_ACCESS_TOKEN=
GITHUB_REPO=
GITHUB_WEBHOOK_SECRET=

# Configure the Key used for generating and validating Admin tokens.
# Specify the algorithm (e.g., ECDSA256) and the Base64-encoded PKCS8, or provide the file path to the Key.
KEY_ALGORITHM=
KEY_ECDSA_PKCS8=
KEY_ECDSA_PATH=

# Instead of using a custom certificate such as ECDSA, you can use an AWS KMS Key ID.
KEY_KMS_ID=

# MySQL connection settings
SPRING_R2DBC_URL=
SPRING_R2DBC_USERNAME=
SPRING_R2DBC_PASSWORD=

# Admin token allowlist (Spring-config source)
# Format: newline/comma separated JWT strings.
ADMIN_TOKEN_ALLOWLIST_INLINE=
# Optional: comma separated JWT strings (maps to admin.token.allowlist.tokens)
ADMIN_TOKEN_ALLOWLIST_TOKENS=

# Admin token allowlist source: AWS Secrets Manager
ADMIN_TOKEN_ALLOWLIST_SOURCES_SECRETS_MANAGER_ENABLED=
ADMIN_TOKEN_ALLOWLIST_SOURCES_SECRETS_MANAGER_SECRET_ID=
ADMIN_TOKEN_ALLOWLIST_SOURCES_SECRETS_MANAGER_REGION=
ADMIN_TOKEN_ALLOWLIST_SOURCES_SECRETS_MANAGER_SYNC_INTERVAL_MS=

# Admin token allowlist source: AWS S3
ADMIN_TOKEN_ALLOWLIST_SOURCES_S3_ENABLED=
ADMIN_TOKEN_ALLOWLIST_SOURCES_S3_BUCKET=
ADMIN_TOKEN_ALLOWLIST_SOURCES_S3_KEY=
ADMIN_TOKEN_ALLOWLIST_SOURCES_S3_REGION=
ADMIN_TOKEN_ALLOWLIST_SOURCES_S3_SYNC_INTERVAL_MS=

# Admin token allowlist source: Spring config
ADMIN_TOKEN_ALLOWLIST_SOURCES_SPRING_CONFIG_ENABLED=
